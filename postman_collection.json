          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "v1",
            "orders",
            "{{orderId}}"
          ]
        }
      }
    },
    {
      "name": "Update Order Status (PUT)",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "http://localhost:8080/api/v1/orders/{{orderId}}?status={{status}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "v1",
            "orders",
            "{{orderId}}"
          ],
          "query": [
            {
              "key": "status",
              "value": "CANCELLED"
            }
